<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <!-- Agrega la configuraci贸n para el recurso CSS -->
    <application>
        <resource>
            <library-name>css</library-name>
            <resource-name>style.css</resource-name>
            <resource-class>javax.faces.application.Resource</resource-class>
            <url-pattern>/resources/css/*</url-pattern>
        </resource>
        <!-- Agrega la configuraci贸n para el archivo CSS de login -->
        <resource>
            <library-name>css</library-name>
            <resource-name>login.css</resource-name>
            <resource-class>javax.faces.application.Resource</resource-class>
            <url-pattern>/resources/css/*</url-pattern>
        </resource>
    </application>
    
    <!-- Agrega la configuraci贸n para el archivo JavaScript -->
    <application>
        <resource>
            <library-name>js</library-name>
            <resource-name>script.js</resource-name>
            <resource-class>javax.faces.application.Resource</resource-class>
            <url-pattern>/resources/js/*</url-pattern>
        </resource>
    </application>
    
    <!-- Reglas de navegaci贸n-->
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>clave</from-outcome>
            <to-view-id>/clave.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

</faces-config>
