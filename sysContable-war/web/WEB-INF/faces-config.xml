<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <!-- Agrega la configuración para el recurso CSS -->
    <application>
        <resource>
            <library-name>js</library-name>
            <resource-name>script.js</resource-name>
            <resource-class>javax.faces.application.Resource</resource-class>
            <url-pattern>/resources/js/*</url-pattern>
        </resource>
        <resource>
            <library-name>js</library-name>
            <resource-name>menu.js</resource-name>
            <resource-class>javax.faces.application.Resource</resource-class>
            <url-pattern>/resources/js/*</url-pattern>
        </resource>
        <resource>
            <library-name>js</library-name>
            <resource-name>index.js</resource-name>
            <resource-class>javax.faces.application.Resource</resource-class>
            <url-pattern>/resources/js/*</url-pattern>
        </resource>
    </application>
    <factory>
        <exception-handler-factory>com.contabilidad.seg.exepciones.CustomExceptionHandlerFactory</exception-handler-factory>
    </factory>
    <!-- Reglas de navegación-->
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>clave</from-outcome>
            <to-view-id>/clave.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

</faces-config>
